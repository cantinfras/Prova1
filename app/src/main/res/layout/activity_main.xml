<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:padding="20dp"
    android:orientation="vertical"
    android:layout_gravity="center">

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="120dp"
        android:layout_gravity="center"
        android:columnCount="3">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="@string/contagemTxtVw"
        android:layout_column="0"
        android:layout_row="0"
        android:textSize="15dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:gravity="center"/>

    <TextView
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:id="@+id/displayEdTxt"
        android:text="@string/displayEdTxt"
        android:textColor="#fff"
        android:background="#777"
        android:textSize="30dp"
        android:layout_column="1"
        android:gravity="center"
        android:layout_columnSpan="2"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"/>

    </GridLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/incrementarBtn"
        android:text="@string/incrementar"
        android:gravity="center"
        android:onClick="incrementar"
        android:paddingTop="10dp"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/decrementarBtn"
        android:text="@string/decrementar"
        android:gravity="center"
        android:onClick="decrementar"
        android:paddingTop="10dp"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/zerarBtn"
        android:text="@string/zerar"
        android:gravity="center"
        android:onClick="zerarContador"
        android:paddingTop="10dp"/>

</LinearLayout>